    <main>
        <section class="container">
            <span class="garimpe-text">Adicionar na</span><br>
            <span class="vintelo-text">Vintélo</span>
            
            <section class="content-wrapper">
                <!-- Upload de Fotos -->
                <section class="photo-section">
                    <section class="main-photo">
                        <img id="main-photo" src="imagens/add foto.png" alt="Foto principal">
                        <label for="main-photo-external" class="photo-btn">
                            <span>+</span>
                        </label>
                        <input type="file" id="main-photo-external" name="fotos-preview" accept="image/*" style="display: none;">
                    </section>
                    
                    <section class="photo-thumbnails">
                        <section class="thumbnail-slot">
                            <label for="thumb-external-1" class="add-photo-btn">+</label>
                            <input type="file" id="thumb-external-1" name="fotos-preview" accept="image/*" style="display: none;">
                        </section>
                        <section class="thumbnail-slot">
                            <label for="thumb-external-2" class="add-photo-btn">+</label>
                            <input type="file" id="thumb-external-2" name="fotos-preview" accept="image/*" style="display: none;">
                        </section>
                        <section class="thumbnail-slot">
                            <label for="thumb-external-3" class="add-photo-btn">+</label>
                            <input type="file" id="thumb-external-3" name="fotos-preview" accept="image/*" style="display: none;">
                        </section>
                        <section class="thumbnail-slot">
                            <label for="thumb-external-4" class="add-photo-btn">+</label>
                            <input type="file" id="thumb-external-4" name="fotos-preview" accept="image/*" style="display: none;">
                        </section>
                    </section>
                    <p class="photo-instructions">Clique para adicionar fotos da galeria</p>
                </section>

                <!-- Formulário -->
                <section class="form-section">
                    <form class="item-form" method="POST" action="/adicionar" enctype="multipart/form-data" onsubmit="return validatePhoto(this)">
                        <!-- Inputs de foto movidos para dentro do form -->
                        <input type="file" id="main-photo-input" name="fotos" accept="image/*" style="display: none;" multiple>
                        <input type="file" id="thumb-input-1" name="fotos" accept="image/*" style="display: none;">
                        <input type="file" id="thumb-input-2" name="fotos" accept="image/*" style="display: none;">
                        <input type="file" id="thumb-input-3" name="fotos" accept="image/*" style="display: none;">
                        <input type="file" id="thumb-input-4" name="fotos" accept="image/*" style="display: none;">
                        <section class="form-row">
                            <section class="form-group">
                                <label for="nome_produto">Nome da peça</label>
                                <input type="text" id="nome_produto" name="nome_produto" 
                                       value="<%= typeof valores !== 'undefined' ? valores.nome_produto || '' : '' %>" required>
                            </section>
                            <section class="form-group desktop-only">
                                <label for="preco_produto">Preço</label>
                                <input type="text" id="preco_produto" name="preco_produto" 
                                       value="<%= typeof valores !== 'undefined' ? valores.preco_produto || '' : '' %>"
                                       placeholder="R$ 0,00" required>
                            </section>
                        </section>
                        
                        <section class="form-row">
                            <section class="form-group">
                                <label for="categoria_produto">Categoria</label>
                                <select id="categoria_produto" name="categoria_produto" required>
                                    <option value=""></option>
                                    <option value="vestidos" <%= typeof valores !== 'undefined' && valores.categoria_produto === 'vestidos' ? 'selected' : '' %>>Vestidos</option>
                                    <option value="saias" <%= typeof valores !== 'undefined' && valores.categoria_produto === 'saias' ? 'selected' : '' %>>Saias</option>
                                    <option value="blusas" <%= typeof valores !== 'undefined' && valores.categoria_produto === 'blusas' ? 'selected' : '' %>>Blusas</option>
                                    <option value="calcas" <%= typeof valores !== 'undefined' && valores.categoria_produto === 'calcas' ? 'selected' : '' %>>Calças</option>
                                    <option value="calcados" <%= typeof valores !== 'undefined' && valores.categoria_produto === 'calcados' ? 'selected' : '' %>>Calçados</option>
                                    <option value="acessorios" <%= typeof valores !== 'undefined' && valores.categoria_produto === 'acessorios' ? 'selected' : '' %>>Acessórios</option>
                                </select>
                            </section>
                            <section class="form-group">
                                <label for="cor_produto">Cor</label>
                                <input type="text" id="cor_produto" name="cor_produto" 
                                       value="<%= typeof valores !== 'undefined' ? valores.cor_produto || '' : '' %>" required>
                            </section>
                        </section>
                        
                        <section class="form-row">
                            <section class="form-group">
                                <label for="condicao_produto">Estado da peça</label>
                                <select id="condicao_produto" name="condicao_produto" required>
                                    <option value=""></option>
                                    <option value="novo" <%= typeof valores !== 'undefined' && valores.condicao_produto === 'novo' ? 'selected' : '' %>>Novo</option>
                                    <option value="semi-novo" <%= typeof valores !== 'undefined' && valores.condicao_produto === 'semi-novo' ? 'selected' : '' %>>Semi-novo</option>
                                    <option value="usado" <%= typeof valores !== 'undefined' && valores.condicao_produto === 'usado' ? 'selected' : '' %>>Usado</option>
                                </select>

                            </section>
                            <section class="form-group">
                                <label for="tamanho_produto">Tamanho</label>
                                <select id="tamanho_produto" name="tamanho_produto" required>
                                    <option value=""></option>
                                    <option value="XPP" <%= typeof valores !== 'undefined' && valores.tamanho_produto === 'XPP' ? 'selected' : '' %>>XPP</option>
                                    <option value="PP" <%= typeof valores !== 'undefined' && valores.tamanho_produto === 'PP' ? 'selected' : '' %>>PP</option>
                                    <option value="P" <%= typeof valores !== 'undefined' && valores.tamanho_produto === 'P' ? 'selected' : '' %>>P</option>
                                    <option value="M" <%= typeof valores !== 'undefined' && valores.tamanho_produto === 'M' ? 'selected' : '' %>>M</option>
                                    <option value="G" <%= typeof valores !== 'undefined' && valores.tamanho_produto === 'G' ? 'selected' : '' %>>G</option>
                                    <option value="GG" <%= typeof valores !== 'undefined' && valores.tamanho_produto === 'GG' ? 'selected' : '' %>>GG</option>
                                    <option value="XXG" <%= typeof valores !== 'undefined' && valores.tamanho_produto === 'XXG' ? 'selected' : '' %>>XXG</option>
                                    <option value="U" <%= typeof valores !== 'undefined' && valores.tamanho_produto === 'U' ? 'selected' : '' %>>U</option>
                                </select>
                            </section>
                        </section>
                        
                        <section class="form-group">
                            <label for="descricao_produto">Descrição</label>
                            <textarea id="descricao_produto" name="descricao_produto" placeholder="Descreva detalhes sobre a peça, marca, tecido, etc..." required><%= typeof valores !== 'undefined' ? valores.descricao_produto || '' : '' %></textarea>
                        </section>
                        
                        <section class="form-row">
                            <section class="form-group">
                                <label for="estampa_produto">Estampa</label>
                                <input type="text" id="estampa_produto" name="estampa_produto" 
                                       value="<%= typeof valores !== 'undefined' ? valores.estampa_produto || '' : '' %>" 
                                       placeholder="Ex: Floral, Listras, Lisa...">
                            </section>
                            <section class="form-group">
                                <label for="quantidade_estoque">Quantidade</label>
                                <input type="number" id="quantidade_estoque" name="quantidade_estoque" 
                                       value="<%= typeof valores !== 'undefined' ? valores.quantidade_estoque || '1' : '1' %>" 
                                       min="1" required>
                            </section>
                        </section>
                        

                        <section class="form-row">
                            <section class="form-group">
                                <label for="status_produto">Status</label>
                                <select id="status_produto" name="status_produto" required>
                                    <option value="d" <%= typeof valores !== 'undefined' && valores.status_produto === 'd' ? 'selected' : '' %>>Disponível</option>
                                    <option value="i" <%= typeof valores !== 'undefined' && valores.status_produto === 'i' ? 'selected' : '' %>>Indisponível</option>
                                </select>
                            </section>
                        </section>
                        
                        <section class="form-group">
                            <label for="outros">Outros Detalhes (Opcional)</label>
                            <textarea id="outros" name="outros" placeholder="Informações complementares sobre o produto..."><%= typeof valores !== 'undefined' ? valores.outros || '' : '' %></textarea>
                        </section>

                        <section class="form-group">
                            <label for="estilo_produto">Estilo da peça</label>
                            <select id="estilo_produto" name="estilo_produto" required>
                                <option value=""></option>
                                <option value="Casual" <%= typeof valores !== 'undefined' && valores.estilo_produto === 'Casual' ? 'selected' : '' %>>Casual</option>
                                <option value="Formal" <%= typeof valores !== 'undefined' && valores.estilo_produto === 'Formal' ? 'selected' : '' %>>Formal</option>
                                <option value="Esportivo" <%= typeof valores !== 'undefined' && valores.estilo_produto === 'Esportivo' ? 'selected' : '' %>>Esportivo</option>
                                <option value="Festa" <%= typeof valores !== 'undefined' && valores.estilo_produto === 'Festa' ? 'selected' : '' %>>Festa</option>
                                <option value="Vintage" <%= typeof valores !== 'undefined' && valores.estilo_produto === 'Vintage' ? 'selected' : '' %>>Vintage</option>
                            </select>
                        </section>

                        <button type="submit" class="submit-btn">
                            Cadastrar produto
                        </button>
                    </form>
                </section>
            </section>
        </section>
    </main>
    
    <!-- Footer -->
    <footer class="footer">
        <img src="imagens/logo.png" alt="Vintélo" class="footer-image">
        <section class="social-media">
            <p class="p-footer">Siga-nos nas redes sociais</p>
            <ul class="social-links">
                <li><a href="#" class="social-link"><img src="imagens/Facebook.png" alt="Facebook"></a></li>
                <li><a href="#" class="social-link"><img src="imagens/Instagram.png" alt="Instagram"></a></li>
                <li><a href="#" class="social-link"><img src="imagens/TikTok.png" alt="TikTok"></a></li>
            </ul>
        </section>
        <p class="copyright">© 2024 Vintélo. Todos os direitos reservados.</p>
    </footer>
    
    <script>
        function validatePhoto(form) {
            const fileInputs = form.querySelectorAll('input[name="fotos"]');
            let hasPhoto = false;
            
            fileInputs.forEach(input => {
                if (input.files && input.files.length > 0) {
                    hasPhoto = true;
                }
            });
            
            if (!hasPhoto) {
                alert('Por favor, adicione pelo menos uma foto do produto.');
                return false;
            }
            
            return true;
        }
        
        // Formatação de preço
        function formatarPreco(input) {
            let valor = input.value.replace(/\D/g, '');
            valor = (valor / 100).toFixed(2) + '';
            valor = valor.replace('.', ',');
            valor = valor.replace(/(\d)(\d{3})(\d{3}),/g, '$1.$2.$3,');
            valor = valor.replace(/(\d)(\d{3}),/g, '$1.$2,');
            input.value = 'R$ ' + valor;
        }
        
// Preview das imagens
document.addEventListener('DOMContentLoaded', function() {
    // Formatar preço
    const precoInputs = document.querySelectorAll('input[name="preco_produto"]');
    precoInputs.forEach(input => {
        input.addEventListener('input', function() {
            formatarPreco(this);
        });
    });
    
    // Escutar apenas inputs EXTERNOS para preview e sincronização
    const externalInputs = document.querySelectorAll('.photo-section input[type="file"]');
    
    externalInputs.forEach(input => {
        input.addEventListener('change', function() {
            const file = this.files[0];
            if (!file) return;
            
            // 1. FAZER PREVIEW
            const reader = new FileReader();
            reader.onload = function(e) {
                let img;
                if (input.id === 'main-photo-external') {
                    img = document.getElementById('main-photo');
                } else {
                    const index = input.id.replace('thumb-external-', '');
                    img = document.getElementById('thumb-' + index);
                    if (!img) {
                        img = document.createElement('img');
                        img.id = 'thumb-' + index;
                        img.style.width = '100%';
                        img.style.height = '100%';
                        img.style.objectFit = 'cover';
                        input.parentNode.appendChild(img);
                        const btn = input.parentNode.querySelector('.add-photo-btn');
                        if (btn) btn.style.display = 'none';
                    }
                }
                if (img) {
                    img.src = e.target.result;
                }
            };
            reader.readAsDataURL(file);
            
            // 2. SINCRONIZAR COM INPUT INTERNO
            let internalInputId;
            if (input.id === 'main-photo-external') {
                internalInputId = 'main-photo-input';
            } else {
                const index = input.id.replace('thumb-external-', '');
                internalInputId = 'thumb-input-' + index;
            }
            
            const internalInput = document.getElementById(internalInputId);
            if (internalInput) {
                const dataTransfer = new DataTransfer();
                dataTransfer.items.add(file);
                internalInput.files = dataTransfer.files;
            }
        });
    });
});

    </script>


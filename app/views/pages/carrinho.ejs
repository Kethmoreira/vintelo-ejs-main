  </header>
  </section>
  
  <section class="oculto-desktop">
    <header>
    <nav class="grid">
      <a href="/produto2">
        <img src="imagens/seta.png" alt="Seta Voltar">
      </a>
      <h1>Sacola</h1>
      <img src="imagens/foto-branca.png" alt="Descrição da Imagem" />
    </nav>
  </header>
  </section>
  
  <main>
  <section class="oculto-desktop">
  <!-- Produto Adicionado -->
  <section class="product-section">
    <% if (carrinho && carrinho.length > 0) { %>
        <% carrinho.forEach((item, index) => { %>
            <article class="product-card1">
                <img src="<%= item.imagem %>" alt="<%= item.nome %>" class="product-img">
                <section class="product-info">
                    <h3><%= item.nome %></h3>
                    <% if (item.cor) { %><p>Cor: <%= item.cor %></p><% } %>
                    <% if (item.estilo) { %><p>Estilo: <%= item.estilo %></p><% } %>
                    <% if (item.estampa) { %><p>Estampa: <%= item.estampa %></p><% } %>
                    <% if (item.tamanho) { %><p>Tamanho: <%= item.tamanho %></p><% } %>
                    <p>R$<%= item.preco.toFixed(2) %></p>
                    <section class="quantity-control">
                        <button class="qty-btn" onclick="decreaseQuantity('<%= item.produto_id %>')">-</button>
                        <span class="quantity" id="qty-<%= item.produto_id %>"><%= item.quantidade %></span>
                        <button class="qty-btn" onclick="increaseQuantity('<%= item.produto_id %>')">+</button>
                    </section>
                </section>
                <button class="remove-item" onclick="removeItem('<%= item.produto_id %>')">
                    <img src="imagens/lixeira.png" class="lixeira">
                </button>
            </article>
        <% }) %>
    <% } else { %>
        <p>Seu carrinho está vazio</p>
    <% } %>
  </section>

  <!-- Informações do Pedido -->
  <section class="order-info">
    <h4>Informações do pedido</h4>
    <section class="order-details">
      <p>Subtotal</p><p>R$<%= subtotal || '0,00' %></p>
      <p>Frete</p><p>R$<%= frete || '0,00' %></p>
      <p>Desconto</p><p>R$0,00</p>
      <p><strong>Total</strong></p><p><strong>R$<%= total || '0,00' %></strong></p>
    </section>
  </section>

  <!-- Cupom de Desconto -->
  <section class="discount-section">
    <h4>Inserir cupom de desconto</h4>
    <form class="discount-input">
      <input type="text" placeholder="Digite o cupom">
      <button class="apply-button">Inserir</button>
    </form>
  </section>

  <!-- Adicionar mais ao carrinho -->
  <section class="suggestions-section">
    <h4>Adicione mais ao carrinho</h4>
    <ul class="product-list">
      <li class="product-suggestion">
        <img src="imagens/conjunto.png" alt="Saia Branca">
        <p>Saia Branca</p>
        <p>R$25,00</p>
      </li>
      <li class="product-suggestion">
        <img src="imagens/saia preta.png" alt="Saia Preta">
        <p>Saia Preta</p>
        <p>R$30,00</p>
      </li>
      <li class="product-suggestion">
        <img src="imagens/saia marrom-2.png" alt="Saia de Veludo">
        <p>Saia de Veludo</p>
        <p>R$25,00</p>
      </li>
      <li class="product-suggestion">
        <img src="imagens/saia rosa brilhante-2.png" alt="Saia Rosa Brilhante">
        <p>Saia Rosa Brilhante</p>
        <p>R$25,00</p>
      </li>
      <li class="product-suggestion">
        <img src="imagens/saia marrom de couro-2.png" alt="Saia de Vinil">
        <p>Saia de Vinil</p>
        <p>R$25,00</p>
      </li>
    </ul>
    <br>
    <a href="/favoritos" class="link-branco"><p class="favorites-link">Conferir peças favoritas ></p></a> 
  </section>
  </section>
  
  <!--  parte para desktop-->
    <section class="oculto-mobile">
      <main class="carrinho-desktop">
        <section class="carrinho-content">
          <h1>Carrinho de Compras</h1>
          
          <section class="carrinho-items">
            <% if (carrinho && carrinho.length > 0) { %>
              <% carrinho.forEach(item => { %>
                <article class="item-card">
                  <img src="<%= item.imagem %>" alt="<%= item.nome %>">
                  <section class="item-details">
                    <h3><%= item.nome %></h3>
                    <% if (item.cor) { %><p>Cor: <%= item.cor %></p><% } %>
                    <% if (item.estilo) { %><p>Estilo: <%= item.estilo %></p><% } %>
                    <% if (item.estampa) { %><p>Estampa: <%= item.estampa %></p><% } %>
                    <% if (item.tamanho) { %><p>Tamanho: <%= item.tamanho %></p><% } %>
                    <p class="item-price">R$ <%= item.preco.toFixed(2) %></p>
                  </section>
                  <section class="item-controls">
                    <section class="quantity-control">
                      <button class="qty-btn" onclick="decreaseQuantity('<%= item.produto_id %>')">-</button>
                      <span class="qty-number"><%= item.quantidade %></span>
                      <button class="qty-btn" onclick="increaseQuantity('<%= item.produto_id %>')">+</button>
                    </section>
                    <p class="subtotal">R$ <%= (item.preco * item.quantidade).toFixed(2) %></p>
                    <button class="remove-item" onclick="removeItem('<%= item.produto_id %>')">
                      <img src="imagens/lixeira.png" alt="Remover">
                    </button>
                  </section>
                </article>
              <% }) %>
            <% } else { %>
              <section class="empty-cart">
                <p>Seu carrinho está vazio</p>
                <a href="/categorias" class="continue-shopping">Continuar comprando</a>
              </section>
            <% } %>
          </section>
        </section>
        
        <aside class="order-summary">
          <h2>Resumo do Pedido</h2>
          <% 
          var total = 0;
          if(typeof carrinho !== 'undefined' && carrinho && carrinho.length > 0){
            carrinho.forEach(function(item){ 
              total += (item.qtde * item.preco); 
            });
          }
          var frete = total > 0 ? 10 : 0;
          %>
          <section class="summary-details">
            <section class="summary-line">
              <span>Subtotal</span>
              <span>R$ <%= total.toFixed(2) %></span>
            </section>
            <section class="summary-line">
              <span>Frete</span>
              <span>R$ <%= frete.toFixed(2) %></span>
            </section>
            <section class="summary-line">
              <span>Desconto</span>
              <span>R$ 0,00</span>
            </section>
            <hr>
            <section class="summary-line total">
              <span>Total</span>
              <span>R$ <%= (total + frete).toFixed(2) %></span>
            </section>
          </section>
          
          <section class="coupon-section">
            <input type="text" placeholder="Código do cupom">
            <button type="button">Aplicar</button>
          </section>
          
          <% if(typeof carrinho !== 'undefined' && carrinho && carrinho.length > 0){ %>
            <a href="/finalizandocompra" class="checkout-btn">Finalizar Compra</a>
          <% } else { %>
            <a href="/categorias" class="checkout-btn">Continuar Comprando</a>
          <% } %>
        </aside>
      </main>
    </section>

               <!--                                        PRODUTOS OCULTOS                                               -->

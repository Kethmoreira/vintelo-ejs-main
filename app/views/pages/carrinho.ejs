  <!-- Botão Finalizar Compra -->
  <% if(typeof carrinho !== 'undefined' && carrinho && carrinho.length > 0){ %>
    <a href="/finalizandocompra"><button class="finalize-button2">Finalizar compra</button></a>
  <% } else { %>
    <a href="/categorias"><button class="finalize-button2">Continuar comprando</button></a>
  <% } %>
  <br>

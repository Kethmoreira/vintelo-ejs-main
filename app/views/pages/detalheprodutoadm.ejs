<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Detalhes do Produto - Admin</title>
    <link rel="stylesheet" href="/css/detalheprodutoadm.css">
    <link href="https://fonts.googleapis.com/css2?family=Raleway:wght@300;400;500;600;700&family=Playfair+Display:wght@400;500;600;700&display=swap" rel="stylesheet">
</head>
<body>
    <nav class="grid">
        <section class="nav-left">
            <img src="/images/seta-esquerda.png" alt="Voltar" onclick="history.back()" style="cursor: pointer;">
        </section>
        <section class="nav-center">
            <img src="/images/logo-vintelo.png" alt="VintÃ©lo" class="logo">
        </section>
        <section class="nav-right"></section>
    </nav>

    <section class="container">
        <section class="page-title">
            <span class="garimpe-text">Detalhes do</span>
            <span class="vintelo-text">Produto</span>
        </section>

        <section class="produto-detail">
            <section class="produto-image">
                <img id="produtoImagem" src="" alt="Produto">
                <section id="statusBadge" class="status-badge"></section>
            </section>

            <section class="produto-info">
                <h2 id="produtoNome"></h2>
                <section class="preco" id="produtoPreco"></section>
                
                <section class="info-grid">
                    <section class="info-item">
                        <span class="label">Categoria:</span>
                        <span class="value" id="produtoCategoria"></span>
                    </section>
                    <section class="info-item">
                        <span class="label">Tamanho:</span>
                        <span class="value" id="produtoTamanho"></span>
                    </section>
                    <section class="info-item">
                        <span class="label">Cor:</span>
                        <span class="value" id="produtoCor"></span>
                    </section>
                    <section class="info-item">
                        <span class="label">Vendedor:</span>
                        <span class="value" id="produtoVendedor"></span>
                    </section>
                    <section class="info-item">
                        <span class="label">Data:</span>
                        <span class="value" id="produtoData"></span>
                    </section>
                    <section class="info-item">
                        <span class="label">Status:</span>
                        <span class="value" id="produtoStatus"></span>
                    </section>
                </section>

                <section class="actions">
                    <button id="btnStatus" class="btn-action"></button>
                    <button id="btnExcluir" class="btn-excluir">Excluir</button>
                </section>
            </section>
        </section>
    </section>

    <script src="/js/detalheprodutoadm.js"></script>

    <script>
        window.isAuthenticated = <%= typeof autenticado !== 'undefined' && autenticado && autenticado.autenticado ? 'true' : 'false' %>;
        <% if (typeof autenticado !== 'undefined' && autenticado && autenticado.tipo) { %>
        window.userType = '<%= autenticado.tipo %>';
        <% } %>
    </script>
    <script src="/js/navegacao.js"></script>
</body>
</html>
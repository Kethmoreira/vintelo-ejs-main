<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Vintélo</title>
    <link rel="stylesheet" href="css/perfilcliente.css">

    <link rel="icon" href="/imagens/brilhoescuro.png" type="image/x-icon">
    
</head>
<body>
    <!-- Header Desktop -->
    <section class="desktop-header">
        <section class="top-bar">
            <p>10% OFF na primeira compra</p>
        </section>
        <header class="main-header">
            <a href="/homecomprador">
                <img src="imagens/logo.png" class="img-logo" alt="Vintélo">
            </a>
            <nav>
                <a href="/categorias">Vestidos</a>
                <a href="/categorias">Saias</a>
                <a href="/categorias">Blusas</a>
                <a href="/categorias">Calças</a>
                <a href="/categorias">Categorias</a>
            </nav>
            <section class="search-profile">
                <form>
                    <input type="text" placeholder="Buscar...">
                </form>
                <ul>
                    <li><a href="/sacola1"><img src="imagens/icone saco.png" class="img-tamanho" alt="Sacola"></a></li>
                    <li><a href="/perfilcliente"><img src="<%= (typeof usuario !== 'undefined' && usuario && usuario.imagem) ? '/' + usuario.imagem : '/imagens/icone sem cadastro.png' %>" class="maria" alt="Perfil"></a></li>
                    <li><a href="/favoritos"><img src="imagens/icone coraçao.png" class="img-tamanho" alt="Favoritos"></a></li>
                </ul>
            </section>
        </header>
    </section>

    <!-- Header Mobile -->
    <section class="mobile-header">
        <header>
            <nav class="grid">
                <a href="/homecomprador">
                    <img src="imagens/seta.png" alt="Voltar">
                </a>
                <img src="imagens/logo.png" alt="Vintélo">
                <a href="/sacola1">
                    <img src="imagens/carrinho.png" alt="Carrinho">
                </a>
            </nav>
        </header>
    </section>

    <main>
        <section class="container">
            <h1>Meu Perfil</h1>
            
            <section class="content-wrapper">
                <!-- Informações do Perfil -->
                <section class="profile-section">
                    <section class="profile-header">
                        <section class="profile-photo">
                            <img id="profile-img" src="<%= (typeof usuario !== 'undefined' && usuario && usuario.imagem) ? '/' + usuario.imagem : '/imagens/icone sem cadastro.png' %>" alt="Foto do perfil">
                            <button class="photo-edit-btn" onclick="editProfilePhoto()">
                                <span>+</span>
                            </button>
                            <input type="file" id="profile-photo-input" name="profile-photo" accept="image/*" style="display: none;" onchange="uploadProfilePhoto(this)">
                        </section>
                        <section class="profile-info">
                            <h2 id="profile-name"><%= (typeof usuario !== 'undefined' && usuario && usuario.nome) ? usuario.nome : 'Maria Silva' %></h2>
                            <p id="profile-email"><%= (typeof usuario !== 'undefined' && usuario && usuario.email) ? usuario.email : 'maria.silva@email.com' %></p>
                        </section>
                    </section>

                    <section class="profile-stats">
                        <section class="stat-item">
                            <span class="stat-number"><%= (typeof usuario !== 'undefined' && usuario && usuario.compras) ? usuario.compras : '12' %></span>
                            <span class="stat-label">Compras</span>
                        </section>
                        <section class="stat-item">
                            <span class="stat-number"><%= (typeof usuario !== 'undefined' && usuario && usuario.favoritos) ? usuario.favoritos : '5' %></span>
                            <span class="stat-label">Favoritos</span>
                        </section>
                        <section class="stat-item">
                            <span class="stat-number"><%= (typeof usuario !== 'undefined' && usuario && usuario.avaliacoes) ? usuario.avaliacoes : '3' %></span>
                            <span class="stat-label">Avaliações</span>
                        </section>
                    </section>
                </section>

                <!-- Menu de Opções -->
                <section class="menu-section">
                    <section class="menu-grid">
                        <a href="#" class="menu-item" onclick="showSection('personal-info')">
                            <section class="menu-icon"><img src="imagens/icone informaçao.png" alt="Informações"></section>
                            <section class="menu-content">
                                <h3>Informações Pessoais</h3>
                                <p>Editar dados pessoais</p>
                            </section>
                        </a>

                        <a href="#" class="menu-item" onclick="showSection('orders')">
                            <section class="menu-icon"><img src="imagens/caminhao.png" alt="Pedidos"></section>
                            <section class="menu-content">
                                <h3>Meus Pedidos</h3>
                                <p>Histórico de compras</p>
                            </section>
                        </a>

                        <a href="#" class="menu-item" onclick="showSection('favorites')">
                            <section class="menu-icon"><img src="imagens/coraçao de fav.png" alt="Favoritos"></section>
                            <section class="menu-content">
                                <h3>Favoritos</h3>
                                <p>Itens salvos</p>
                            </section>
                        </a>

                        <a href="#" class="menu-item" onclick="showSection('addresses')">
                            <section class="menu-icon"><img src="imagens/icone sacola.png" alt="Endereços"></section>
                            <section class="menu-content">
                                <h3>Endereços</h3>
                                <p>Gerenciar endereços</p>
                            </section>
                        </a>

                        <a href="#" class="menu-item" onclick="showSection('payment')">
                            <section class="menu-icon"><img src="imagens/cartao.png" alt="Pagamento"></section>
                            <section class="menu-content">
                                <h3>Pagamento</h3>
                                <p>Cartões e métodos</p>
                            </section>
                        </a>

                        <a href="#" class="menu-item" onclick="showSection('notifications')">
                            <section class="menu-icon"><img src="imagens/icone blog.png" alt="Notificações"></section>
                            <section class="menu-content">
                                <h3>Notificações</h3>
                                <p>Preferências</p>
                            </section>
                        </a>
                    </section>
                </section>
            </section>

            <!-- Seções de Conteúdo -->
            <section id="personal-info" class="content-section" style="display: none;">
                <section class="section-wrapper">
                    <section class="section-header">
                        <h2>Informações Pessoais</h2>
                        <button class="back-btn" onclick="hideAllSections()">← Voltar</button>
                    </section>
                
                <form class="profile-form" method="POST" action="/perfilcliente" enctype="multipart/form-data">
                    <section class="form-row">
                        <section class="form-group">
                            <label for="first-name">Nome</label>
                            <input type="text" id="first-name" name="firstName" value="<%= (typeof usuario !== 'undefined' && usuario && usuario.nome) ? usuario.nome.split(' ')[0] : 'Maria' %>" required>
                        </section>
                        <section class="form-group">
                            <label for="last-name">Sobrenome</label>
                            <input type="text" id="last-name" name="lastName" value="<%= (typeof usuario !== 'undefined' && usuario && usuario.nome) ? usuario.nome.split(' ').slice(1).join(' ') : 'Silva' %>" required>
                        </section>
                    </section>
                    
                    <section class="form-group">
                        <label for="email">E-mail</label>
                        <input type="email" id="email" name="email" value="<%= (typeof usuario !== 'undefined' && usuario && usuario.email) ? usuario.email : 'maria.silva@email.com' %>" required>
                    </section>
                    
                    <section class="form-row">
                        <section class="form-group">
                            <label for="phone">Telefone</label>
                            <input type="tel" id="phone" name="phone" value="<%= (typeof usuario !== 'undefined' && usuario && usuario.telefone) ? usuario.telefone : '(11) 99999-9999' %>" required>
                        </section>
                        <section class="form-group">
                            <label for="birth-date">Data de Nascimento</label>
                            <input type="date" id="birth-date" name="birth-date" value="<%= (typeof usuario !== 'undefined' && usuario && usuario.data_nasc) ? usuario.data_nasc : '' %>">
                        </section>
                    </section>
                    
                    <section class="form-group">
                        <label for="bio">Sobre mim</label>
                        <textarea id="bio" name="bio" placeholder="Conte um pouco sobre você..."><%= (typeof usuario !== 'undefined' && usuario && usuario.bio) ? usuario.bio : 'Apaixonada por moda sustentável e peças únicas!' %></textarea>
                    </section>
                    
                    <button type="submit" class="save-btn">Salvar Alterações</button>
                </form>
                </section>
            </section>

            <section id="orders" class="content-section" style="display: none;">
                <section class="section-header">
                    <h2>Meus Pedidos</h2>
                    <button class="back-btn" onclick="hideAllSections()">← Voltar</button>
                </section>
                
                <% if (typeof usuario !== 'undefined' && usuario && usuario.compras > 0) { %>
                    <section class="orders-list">
                        <p>Seus pedidos aparecerão aqui quando você fizer compras.</p>
                    </section>
                <% } else { %>
                    <section class="empty-state">
                        <img src="imagens/icone saco.png" alt="Sem pedidos" class="empty-icon">
                        <h3 class="empty-title">Nenhum pedido ainda</h3>
                        <p class="empty-text">Que tal explorar nossa coleção e fazer sua primeira compra?</p>
                        <a href="/categorias" class="empty-btn">Explorar Produtos</a>
                    </section>
                <% } %>
            </section>

            <section id="favorites" class="content-section" style="display: none;">
                <section class="section-header">
                    <h2>Meus Favoritos</h2>
                    <button class="back-btn" onclick="hideAllSections()">← Voltar</button>
                </section>
                
                <% if (typeof favoritos !== 'undefined' && favoritos && favoritos.length > 0) { %>
                    <section class="favorites-grid">
                        <% favoritos.forEach(function(favorito) { %>
                            <section class="favorite-item">
                                <section class="favorite-image">
                                    <img src="<%= favorito.IMG_PRODUTO_1 || 'imagens/produto-default.png' %>" alt="<%= favorito.NOME_PRODUTO %>">
                                    <button class="remove-favorite" onclick="removeFavorite(<%= favorito.ID_PRODUTO %>)">❤️</button>
                                </section>
                                <section class="favorite-info">
                                    <h3><%= favorito.NOME_PRODUTO %></h3>
                                    <p class="favorite-price">R$ <%= favorito.PRECO_PRODUTO %></p>
                                    <button class="add-to-cart-btn">Adicionar ao Carrinho</button>
                                </section>
                            </section>
                        <% }); %>
                    </section>
                <% } else { %>
                    <section class="empty-state">
                        <img src="imagens/icone coraçao.png" alt="Sem favoritos" class="empty-icon">
                        <h3 class="empty-title">Nenhum favorito ainda</h3>
                        <p class="empty-text">Explore nossa coleção e favorite suas peças preferidas!</p>
                        <a href="/categorias" class="empty-btn">Descobrir Peças</a>
                    </section>
                <% } %>
            </section>

            <section id="addresses" class="content-section" style="display: none;">
                <section class="section-header">
                    <h2>Meus Endereços</h2>
                    <button class="back-btn" onclick="hideAllSections()">← Voltar</button>
                </section>
                
                <section class="addresses-list">
                    <section class="address-item">
                        <section class="address-info">
                            <h3>Casa</h3>
                            <p><%= (typeof usuario !== 'undefined' && usuario && usuario.logradouro) ? usuario.logradouro + ', ' + usuario.numero : 'Rua das Flores, 123' %></p>
                            <p><%= (typeof usuario !== 'undefined' && usuario && usuario.bairro) ? usuario.bairro + ' - ' + usuario.cidade + ', ' + usuario.uf : 'Vila Madalena - São Paulo, SP' %></p>
                            <p>CEP: <%= (typeof usuario !== 'undefined' && usuario && usuario.cep) ? usuario.cep.replace(/^(\d{5})(\d{3})$/, '$1-$2') : '05435-000' %></p>
                        </section>
                        <section class="address-actions">
                            <button class="edit-address-btn" onclick="editAddress(1)">Editar</button>
                            <button class="delete-address-btn" onclick="deleteAddress(1)">Excluir</button>
                        </section>
                    </section>

                    <button class="add-address-btn" onclick="addNewAddress()">+ Adicionar Novo Endereço</button>
                </section>
            </section>

            <!-- Modal de Endereço -->
            <section id="address-modal" class="address-modal">
                <section class="address-modal-content">
                    <section class="modal-header">
                        <h3 id="modal-title">Adicionar Novo Endereço</h3>
                        <button class="close-modal" onclick="closeAddressModal()">×</button>
                    </section>
                    
                    <form class="address-form" onsubmit="saveAddress(event)">
                        <section class="form-group">
                            <label for="address-name">Nome do Endereço</label>
                            <input type="text" id="address-name" name="addressName" placeholder="Ex: Casa, Trabalho" required>
                        </section>
                        
                        <section class="form-row">
                            <section class="form-group">
                                <label for="address-cep">CEP</label>
                                <input type="text" id="address-cep" name="cep" placeholder="00000-000" value="<%= (typeof usuario !== 'undefined' && usuario && usuario.cep) ? usuario.cep.replace(/^(\d{5})(\d{3})$/, '$1-$2') : '' %>" maxlength="9" required>
                            </section>
                            <section class="form-group">
                                <label for="address-number">Número</label>
                                <input type="text" id="address-number" name="number" placeholder="123" value="<%= (typeof usuario !== 'undefined' && usuario && usuario.numero) ? usuario.numero : '' %>" required>
                            </section>
                        </section>
                        
                        <section class="form-group">
                            <label for="address-street">Rua</label>
                            <input type="text" id="address-street" name="street" placeholder="Nome da rua" value="<%= (typeof usuario !== 'undefined' && usuario && usuario.logradouro) ? usuario.logradouro : '' %>" required>logradouro : '' %>" required>.logradouro) ? usuario.logradouro : '' %>" required>io.logradouro) ? usuario.logradouro : '' %>" required>
                        </section>
                        
                        <section class="form-row">
                            <section class="form-group">
                                <label for="address-neighborhood">Bairro</label>
                                <input type="text" id="address-neighborhood" name="neighborhood" placeholder="Nome do bairro" value="<%= (typeof usuario !== 'undefined' && usuario && usuario.bairro) ? usuario.bairro : '' %>" required>
                            </section>
                            <section class="form-group">
                                <label for="address-city">Cidade</label>
                                <input type="text" id="address-city" name="city" placeholder="Nome da cidade" value="<%= (typeof usuario !== 'undefined' && usuario && usuario.cidade) ? usuario.cidade : '' %>" required>
                            </section>
                        </section>
                        
                        <section class="form-row">
                            <section class="form-group">
                                <label for="address-state">Estado</label>
                                <select id="address-state" name="state" required>
                                    <option value="">Selecione o estado</option>
                                    <option value="SP" <%= (typeof usuario !== 'undefined' && usuario && usuario.uf === 'SP') ? 'selected' : '' %>>São Paulo</option>
                                    <option value="RJ" <%= (typeof usuario !== 'undefined' && usuario && usuario.uf === 'RJ') ? 'selected' : '' %>>Rio de Janeiro</option>
                                    <option value="MG" <%= (typeof usuario !== 'undefined' && usuario && usuario.uf === 'MG') ? 'selected' : '' %>>Minas Gerais</option>
                                    <option value="RS" <%= (typeof usuario !== 'undefined' && usuario && usuario.uf === 'RS') ? 'selected' : '' %>>Rio Grande do Sul</option>
                                    <option value="PR" <%= (typeof usuario !== 'undefined' && usuario && usuario.uf === 'PR') ? 'selected' : '' %>>Paraná</option>
                                    <option value="SC" <%= (typeof usuario !== 'undefined' && usuario && usuario.uf === 'SC') ? 'selected' : '' %>>Santa Catarina</option>
                                    <option value="BA" <%= (typeof usuario !== 'undefined' && usuario && usuario.uf === 'BA') ? 'selected' : '' %>>Bahia</option>
                                    <option value="GO" <%= (typeof usuario !== 'undefined' && usuario && usuario.uf === 'GO') ? 'selected' : '' %>>Goiás</option>
                                    <option value="PE" <%= (typeof usuario !== 'undefined' && usuario && usuario.uf === 'PE') ? 'selected' : '' %>>Pernambuco</option>
                                    <option value="CE" <%= (typeof usuario !== 'undefined' && usuario && usuario.uf === 'CE') ? 'selected' : '' %>>Ceará</option>
                                </select>
                            </section>
                            <section class="form-group">
                                <label for="address-complement">Complemento</label>
                                <input type="text" id="address-complement" name="complement" placeholder="Apto, Bloco, etc.">
                            </section>
                        </section>
                        
                        <section class="modal-actions">
                            <button type="button" class="cancel-btn" onclick="closeAddressModal()">Cancelar</button>
                            <button type="submit" class="save-btn">Salvar Endereço</button>
                        </section>
                    </form>
                </section>
            </section>

            <section id="payment" class="content-section" style="display: none;">
                <section class="section-header">
                    <h2>Métodos de Pagamento</h2>
                    <button class="back-btn" onclick="hideAllSections()">← Voltar</button>
                </section>
                
                <section class="payment-methods">
                    <section class="empty-state">
                        <p>Nenhum método de pagamento cadastrado.</p>
                    </section>
                    <button class="add-payment-btn" onclick="addNewPayment()">+ Adicionar Cartão</button>
                </section>
            </section>

            <section id="notifications" class="content-section" style="display: none;">
                <section class="section-header">
                    <h2>Notificações</h2>
                    <button class="back-btn" onclick="hideAllSections()">← Voltar</button>
                </section>
                
                <section class="notifications-settings">
                    <section class="notification-item">
                        <section class="notification-info">
                            <h3>Ofertas e Promoções</h3>
                            <p>Receba notificações sobre descontos especiais</p>
                        </section>
                        <label class="toggle-switch">
                            <input type="checkbox" checked>
                            <span class="slider"></span>
                        </label>
                    </section>

                    <section class="notification-item">
                        <section class="notification-info">
                            <h3>Status do Pedido</h3>
                            <p>Atualizações sobre seus pedidos</p>
                        </section>
                        <label class="toggle-switch">
                            <input type="checkbox" checked>
                            <span class="slider"></span>
                        </label>
                    </section>

                    <section class="notification-item">
                        <section class="notification-info">
                            <h3>Novos Produtos</h3>
                            <p>Seja a primeira a saber sobre novidades</p>
                        </section>
                        <label class="toggle-switch">
                            <input type="checkbox">
                            <span class="slider"></span>
                        </label>
                    </section>
                </section>
            </section>
        </section>
    </main>
    
    <!-- Footer -->
    <footer class="footer">
        <img src="imagens/logo.png" alt="Vintélo" class="footer-image">
        <section class="social-media">
            <p>Siga-nos nas redes sociais</p>
            <ul class="social-links">
                <li><a href="https://www.instagram.com/vintelobrechos" target="_blank" class="social-link"><img src="imagens/Instagram.png" alt="Instagram"></a></li>
                <li><a href="https://facebook.com" target="_blank" class="social-link"><img src="imagens/Facebook.png" alt="Facebook"></a></li>
                <li><a href="#" class="social-link"><img src="imagens/Pinterest.png" alt="Pinterest"></a></li>
            </ul>
        </section>
        <p class="copyright">&copy; 2024 Vintélo. Todos os direitos reservados.</p>
    </footer>

    <script src="script/perfilcliente.js"></script>
    <script>
        function editProfilePhoto() {
            document.getElementById('profile-photo-input').click();
        }
        
        function uploadProfilePhoto(input) {
            if (input.files && input.files[0]) {
                const formData = new FormData();
                formData.append('profile-photo', input.files[0]);
                
                fetch('/perfilcliente/foto', {
                    method: 'POST',
                    body: formData
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        document.getElementById('profile-img').src = '/' + data.imagePath;
                        const headerImg = document.querySelector('.maria');
                        if (headerImg) headerImg.src = '/' + data.imagePath;
                    }
                })
                .catch(error => {
                    console.error('Erro ao fazer upload:', error);
                });
            }
        }
        
        function showSection(sectionId) {
            document.getElementById(sectionId).style.display = 'block';
        }
        
        function hideAllSections() {
            const sections = document.querySelectorAll('.content-section');
            sections.forEach(section => {
                section.style.display = 'none';
            });
        }
        
        function removeFavorite(produtoId) {
            fetch('/favoritar', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({ produto_id: produtoId })
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    location.reload();
                }
            });
        }
        
        function addNewAddress() {
            document.getElementById('address-modal').style.display = 'block';
        }
        
        function closeAddressModal() {
            document.getElementById('address-modal').style.display = 'none';
        }
        
        function addNewPayment() {
            alert('Funcionalidade de adicionar cartão em desenvolvimento');
        }
    </script>
</body>
</html>